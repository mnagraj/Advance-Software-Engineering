<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tutorial.maps.google.googlemapsapplication.PhotoActivity"
    android:background="@drawable/back">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Home"
        android:id="@+id/btn_photo_home"
        android:onClick="redirectToHome"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/wallet_link_text_light" />

    <ImageView
        android:id="@+id/view_photo"
        android:layout_width="260dp"
        android:layout_height="374dp"
        android:cropToPadding="false"
        android:background="@drawable/photo_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_take_photo" />

    <Button
        android:text="BROWSE PHOTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_browse"
        android:onClick="onClickOfPhotoBrowse"
        android:layout_marginBottom="92dp"
        android:textColor="@android:color/holo_green_light"
        android:layout_above="@+id/btn_photo_home"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take photo"
        android:id="@+id/btn_take_photo"
        android:layout_marginStart="21dp"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/btn_browse"
        android:layout_alignBottom="@+id/btn_browse"
        android:layout_alignParentStart="true" />

</RelativeLayout>
